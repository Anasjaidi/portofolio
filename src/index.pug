doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.1.1/css/all.css")
        link(rel="stylesheet", href="./css/main.css")
        script(src="./js/main.js")
        //- script(src="https://kit.fontawesome.com/97edd601e7.js" crossorigin="anonymous")
    body
        //- start container
        .container-fluid(class="grid grid-cols-10")

            //- start aside nav
            .aside

                //- start logo 
                .logo: img(src="./img/logo.png")
                
                //- start nav section
                - var icons = ["fa-light fa-house", "fa-light fa-user", "fa-light fa-laptop", "fa-light fa-folder-tree", "fa-light fa-phone"] 
                - var labels = ["home", "about", "skills", "projects", "contact"] 
                - var labelsc = ["active"] 
                nav
                    -  for (var i = 0; i < icons.length; i++)
                        a.icon(class=labelsc[i])
                            i(class=icons[i])
                            span #{labels[i]}             
                //- start bottom icon
                .more
                    i(class="fa-light fa-arrow-down")
            //- start main section container
            .main